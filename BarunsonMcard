        <script type="text/javascript">
            $(document).ready(function (e) {
                var _image = $('meta[property="og:image"]').attr('content');
                
                Kakao.init('94a08cfa99972d4a71c99401069b1311');

                if (_image == null || _image.length == 0) {
                    $("#kakao-link-btn").hide();
                }

                //축의금 내용이 없으면 버튼 숨김
                const idxs = [];
                $(".account_pop").each(function (i) {
                    idxs.push($(this).attr("data-idx"));
                });

                //신랑
                if (idxs.indexOf("1") == -1){
                    $(".groom").hide();
                }

                //신부
                if (idxs.indexOf("2") == -1) {
                    $(".bride").hide();
                }
            });

            function shareMessage() {
                var _url = $('meta[property="og:url"]').attr('content');
                var _title = $('meta[property="og:title"]').attr('content');
                var _desc = $('meta[property="og:description"]').attr('content');
                var _image = $('meta[property="og:image"]').attr('content');
                var _imgWidth = $('meta[property="og:image:width"]').attr('content');
                var _imgHeight = $('meta[property="og:image:height"]').attr('content');
                var _eventDateTime = $("#eventDateTime").val();
                var _addressDetail = $("#addressDetail").text();

                var lat = $('.map_btn').data('lat');
                var lng = $('.map_btn').data('lng');
                var loc = $('.map_btn').data('name');

                var params = [];
                params.push('lat='+lat);
                params.push('lot='+lng);
                params.push('name='+loc);

                var mapUrl = window.location.origin+'/m2/mapredirect?' + params.join('&');

                var kakaoDesc = _desc;
                if (_eventDateTime.length > 0) {
                    kakaoDesc = _eventDateTime + "\n" + _desc;
                }

                if ((_addressDetail != null && _addressDetail.length > 0)) {
                    Kakao.Share.sendDefault({
                        objectType: 'feed',         // 카카오톡 링크 타입
                        content: {
                            title: _title,              // 타이틀
                            description: kakaoDesc,
                            imageUrl: _image,           // 이미지
                            link: {
                                mobileWebUrl: _url,     // 모바일 주소
                                webUrl: _url            // 웹 주소
                            },
                            imageWidth: parseInt(_imgWidth == null ? 0 : _imgWidth),
                            imageHeight: parseInt(_imgHeight == null ? 0 : _imgWidth)
                        },
                        social: {
                        },
                        buttons: [
                            {
                                title: '자세히 보기',
                                link: {
                                    mobileWebUrl: _url,
                                    webUrl: _url
                                }
                            },
                            {
                                title: '위치 보기',
                                link: {
                                    mobileWebUrl: mapUrl,
                                    webUrl: mapUrl
                                }
                            },
                        ]

                    });
                    //공유할 예식장 주소가 없으면
                } else if ((_addressDetail.length == 0)) {
                    Kakao.Share.sendDefault({
                        objectType: 'feed',
                        content: {
                            title: _title,
                            description: kakaoDesc,
                            imageUrl: _image,
                            link: {
                                mobileWebUrl: _url,
                                webUrl: _url,
                            },
                            imageWidth: parseInt(_imgWidth == null ? 0 : _imgWidth),
                            imageHeight: parseInt(_imgHeight == null ? 0 : _imgWidth)
                        },
                        buttons: [
                            {
                                title: '자세히 보기',
                                link: {
                                    mobileWebUrl: _url,
                                    webUrl: _url,
                                },
                            }
                        ],
                    });
                }
            }

            function startNavigation(address, x, y) {
                Kakao.Navi.start({
                    name: address,
                    x: x,
                    y: y,
                    coordType: 'wgs84'
                });
            }
        </script>
